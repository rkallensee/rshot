<!doctype html>
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">

    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:extralight,light,regular,bold", :media => "all" %>

    <title>OpenShot</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
</head>
<body>

    <div id="container">
        <header>
            <div class="container">
                <h1><%= link_to 'shimmer', :controller => '/home', :action => 'index' %></h1>

                <nav>
                    <ul>
                        <% if user_signed_in? %>
                            <li><%= link_to 'Account', edit_user_registration_path %></li>
                            <li><%= link_to 'Profile', current_user.profile %></li>
                            <li><%= link_to 'My pictures', profile_pictures_path(current_user.profile) %></li>
                            <li><%= link_to 'My albums', profile_albums_path(current_user.profile) %></li>
                            <li><%= link_to 'Upload picture', new_picture_path %></li>
                            <li><%= link_to "Sign out", destroy_user_session_path %></li>
                        <% else %>
                            <li><%= link_to "Sign up", new_user_registration_path %></li>
                            <li><%= link_to "Sign in", new_user_session_path %></li>
                        <% end %>
                    </ul>
                </nav>

                <div class="current-user">
                    <% if user_signed_in? %>
                        Signed in as <%= current_user.email %>, Nick <%= current_user.profile.nick %>
                    <% end %>
                </div>
            </div>
        </header>
        <div class="container" id="mainContainer">
            <aside>
                <%= yield :sidebar %>
            </aside>
            <div id="main" role="main">
                <% flash.each do |name, msg| %>
                    <%= content_tag :div, msg, :id => "flash_#{name}" %>
                <% end %>

                <%= yield %>
            </div>
            <footer>

            </footer>
            <div class="clearfix"></div>
        </div>
    </div><!--! end of #container -->

</body>
</html>
