<%= form_for [@profile, @picture], :html => { :multipart => true, :class => "form-stacked" } do |f| %>
  <% if @picture.errors.any? %>
    <div class="alert-message block-message error fade in" data-alert="alert">
      <a class="close" href="#">&times;</a>
      <h3><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h3>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :photo %><br />
    <%= f.file_field :photo%>
  </div>

  <div class="clearfix">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="clearfix">
    <%= f.label :album %><br />
    <%= collection_select(:picture, :album_id, @albums, :id, :title, {:include_blank => true}) %>
  </div>

  <div class="clearfix">
    <%= f.label :tag_list %> (separated by comma)<br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= f.submit(:class => "btn primary") %>

    <% if @picture.persisted? %>
      <%= link_to 'Back', profile_picture_path(@profile, @picture), :class => "btn" %>
    <% else %>
      <%= link_to 'Back', profile_pictures_path(@profile), :class => "btn" %>
    <% end %>
  </div>
<% end %>
